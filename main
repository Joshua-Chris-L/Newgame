# Question Bank Game!

from data import question_data

class QuestionGame:
    def __init__(self, question_data):
        self.data = question_data 

    def Question_bank(self):
        for ques in self.data:
            new_question = ques["text"]
            print(ques["text"])

    

questions = QuestionGame(question_data)
questions.Question_bank()













